<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E65100"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#AAE65100"
        android:orientation="horizontal"
        android:id="@+id/headerTextConatiner">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/logosu4"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="2dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="6pt"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:id="@+id/detailBusName"

                />
        </LinearLayout>




    </LinearLayout>

    <com.andro.ishan.su_bus_app.TouchImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:id="@+id/detailImage"
        android:src="@drawable/tosuwestcott"
        android:layout_below="@id/headerTextConatiner"
        />

    </RelativeLayout>
</FrameLayout>